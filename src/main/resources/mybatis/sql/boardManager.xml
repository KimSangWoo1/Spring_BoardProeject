<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<select id="selectBoardList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
            SELECT
                IDX,
                TITLE,
                CLICK_CNT,
                CREATE_DATE
            FROM
                board_table
            where 
            	DELYN='N' 
            ORDER BY IDX DESC
        ]]>
	</select>
	<!-- useGeneratedKeys="true" keyProperty="IDX" AutoInCrement 사용했기에 적어줘야 함 -->
	<insert id="boardInsert" parameterType="hashmap" useGeneratedKeys="true" keyProperty="IDX">
		<![CDATA[
            INSERT INTO board_table
			(
				TITLE,
				CONTENTS,
				CLICK_CNT,
				DELYN,
				CREATE_DATE,
				CREATE_ID
			)
			VALUES
			(
				#{title},
				#{contents},
				0,
				'N',
				NOW(),
				'ADMIN'
			)
        ]]>
	</insert>
	<!--  
	<select id="boardUpdateView" parameterType="hashMap" resultMap="hashMap">
		<![CDATA[ 
			SELECT IDX, TITLE, CLICK_CNT, CREATE_DATE FROM board_table WHERE DELYN='N' AND IDX=${BOARDNUM}
		]]>
	</select>
	-->
	<update id="boardUpdate" parameterType="hashmap">
		<![CDATA[ 
			UPDATE board_table
			SET
				TITLE = #{TITLE},
				CONTENTS = #{CONTENTS},
			WHERE
				IDX = ${BOARDNUM}
		]]>
	</update>
</mapper>

<!-- CDATA 태그안에서는 전부 문자열로 치환함  < , > ( ) 같은걸 쓰면 오류 날 경우를 없애줌-->
